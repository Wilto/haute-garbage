---
layout: layouts/base.njk
templateClass: tmpl-post
---
{% macro respimg(path, img, sizes, alt, capt) %}
<picture>
	<source
		type="image/webp"
		sizes="{{ sizes }}"
		srcset="
			{{ path }}{{ img }}-1.webp 320w,
			{{ path }}{{ img }}-2.webp 450w,
			{{ path }}{{ img }}-3.webp 640w,
			{{ path }}{{ img }}-4.webp 820w,
			{{ path }}{{ img }}-5.webp 1024w">
	<img 
		sizes="{{ sizes }}"
		srcset="
			{{ path }}{{ img }}-1.jpg 320w,
			{{ path }}{{ img }}-2.jpg 450w,
			{{ path }}{{ img }}-3.jpg 640w,
			{{ path }}{{ img }}-4.jpg 820w,
			{{ path }}{{ img }}-5.jpg 1024w"
		src="{{ path }}{{ img }}-4.jpg" 
		{% if capt %}
		aria-describedby="capt-1"
		{% endif %}
		itemprop="image"
		alt="{{ alt }}">
</picture>
{% endmacro %}
<div class="col" itemscope itemtype="http://schema.org/Recipe" class="h-recipe">
	<div class="intro">
		<header role="banner" class="recipeheader">
			{% for tag in tags %}
				<a href="/recipes/tagged/{{ tag }}" class="art-section p-category"><span class="a11y-only">Category: </span>{{ tag }}</a>
			{% endfor %}
			<h2 class="recipe-hed p-name" itemprop="name">{{ title }}{% if hq %}<svg class="hq" width="24" height="25" viewBox="0 0 324 329" version="1" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M44 223v-7a118 118 0 1 1 230 38v-5a96 96 0 1 0-153 77l5 3a167 167 0 1 1 197-221A153 153 0 0 0 44 223z" fill="#444" fill-rule="evenodd"/></svg>{% endif %}</h2>

			{% if subhed %}<a href="#recipe" class="recipe-jump-txt">Skip to the recipe</a>{% endif %}

			<dl class="meta">
				{% if meta.serves %}
				<dt>Serves</dt>
				<dd itemprop="recipeYield" class="p-yield">{{meta.serves}}</dd>
				{% endif %}
				{% if meta.active %}
				<dt>Active Time</dt>
				<dd itemprop="cookTime">{{meta.active}}</dd>
				{% endif %}
				{% if meta.total %}
				<dt>Total Time</dt>
				<dd itemprop="totalTime" class="dt-duration">{{meta.total}}</dd>
				{% endif %}
				{% if metakey %}
				<dt>{{ metakey }}</dt>
				{% endif %}
				{% if metaval %}
				<dd itemprop="recipeYield" class="p-yield">{{ metaval }}</dd>
				{% endif %}
			</dl>
			{% if subhed %}<a href="#recipe" class="recipe-jump">
				<svg viewBox="0 0 110 110" xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg">
					<title>Skip to Recipe</title>
					<path aria-hidden="true" fill="rgba(0,0,0,.65)" transform="rotate(90, 50, 57.465)" d="m74.363,63.82802l-36,36c-1.758,1.758 -4.06,2.637 -6.363,2.637s-4.605,-0.879 -6.363,-2.637c-3.516,-3.513 -3.516,-9.214 0,-12.727l29.636,-29.63601l-29.636,-29.637c-3.516,-3.513 -3.516,-9.214 0,-12.727c3.516,-3.516 9.211,-3.516 12.727,0l36,36c3.515,3.513 3.515,9.215 -0.001,12.727z" />
				</svg>{% endif %}
			</a>
		</header>

		{% if feat_img.img %}
		<figure class="feat-thumb">
			{% cloudrespimg
				feat_img.img,
				feat_img.alt,
				"(min-width: 1260px) 370px, (min-width: 720px) calc(28.46vw + 17px), (min-width: 560px) 37.86vw, 99.58vw"
			%}
			{% if feat_img.capt  %}
			<figcaption id="capt-1" class="caption">
				{{ feat_img.capt | safe }}
			</figcaption>
			{% endif %}
		</figure>
		{% endif %}

		{% if video %}
		<figure class="feat-thumb" aria-describedby="pagevid">
			<video controls>
				<source src="/_assets/media/{{video}}.mp4" type="video/mp4">
				<track kind="captions" src="/_assets/media/{{video}}.vtt">
				Sorry, Iâ€™m having trouble loading this video.
			</video>
			{% if capt %}
			<figcaption id="pagevid" class="caption">
				{{capt | safe }}
			</figcaption>
			{% endif %}
		</figure>
		{% endif %}

		{% if lede %}
		<p class="lede" itemprop="description">{{ lede | safe }}</p>
		{% endif %}

		{{ layoutContent | safe }}

{% if related %}
		<div class="related-articles">
			<h3 class="related-hed">Related Article{% if related.length > 1 %}s{% endif %}:</h3>
			{% for relation in related %}
				{% set rels = collections.articles | relatedFilter( relation ) %}
				{% for rel in rels %}
				<article class="related-article">
					{% if rel.data.img %}
						<a href="{{ rel.data.page.url }}">
						{{ respimg('/img/', rel.data.img, '10em', rel.data.alt )  }}
						</a>
					{% endif %}
					{% if rel.data.feat_img.img %}
					{% cloudrespimg
						feat_img.img,
						feat_img.alt,
						"10em"
					%}
					<img src="{{ feat_img.img }}" alt="{{ feat_img.alt }}">
					{% endif %}
					<div>
						<h4 class="rel-hed"><a href="{{ rel.data.page.url }}">{{ rel.data.title }}</a></h4>
						<p class="rel-lede">{{ rel.data.subhed | safe }}</p>
					</dio>
				</article>
				{% endfor %}
			{% endfor %}
		</div>
{% endif %}

	</div>
{% if subhed %}
	<h3 class="article-hed jump-hed" id="recipe"><span>Recipe:</span> {{ subhed }}</h3>
{% endif %}
{% if notes %}
	<p class="lede p-summary">{{ notes | safe }}</p>
{% endif %}

{% if ingredient_steps %}
	<h4 class="inline-hed" id="recipe-sub0">Ingredients</h4>
	{%- for ingstep in ingredient_steps -%}
		{% if ingstep.title %}<h4 class="recipe-subhed">{{ingstep.title}}</h4>{% endif %}
		<ul class="ingredients ingredients-step" aria-labelledby="recipe-sub0">
			{%- for ing in ingstep.ingredients -%}
			<li itemprop="recipeIngredient" class="p-ingredient">
				<p><span class="amt">{{ing.amt_whole}}{% if ing.amt_frac %}<b class="frac" role="presentation">{{ing.amt_frac}}</b>{% endif %}{{ing.measure}}</span>
				{{ing.name}}
				{% if ing.notes %},&nbsp;{% if ing.notehref %}<a href="{{ing.notehref}}">{%- endif -%}{{ing.notes | safe }}{% if ing.notehref %}</a>{%- endif -%}{%- endif -%}</p>
				{% if ing.optional %}<span class="opt">Optional</span>{%- endif -%}
			</li>
			{%- endfor -%}
		</ul>
	{%- endfor -%}
{% endif %}
{% if instruction_steps %}
		<div class="instructions">
			<h4 class="inline-hed">Instructions</h4>

			{%- for insstep in instruction_steps -%}
			{% if insstep.title %}<h4 class="recipe-subhed"><span class="a11y-only">Instructions </span>{{ insstep.title }}</h4>{% endif %}
			<ol class="steps e-instructions" itemprop="recipeInstructions">
				{%- for step in insstep.instructions -%}
				<li><p>{{ step.instruction }}</p></li>
				{%- endfor -%}
			</ol>
			{%- endfor -%}
		</div>
	{% endif %}

	</div>
</div>