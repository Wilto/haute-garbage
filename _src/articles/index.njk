---
layout: layouts/listing.njk
tags: nav
navtitle: Articles
---

{% macro respimg(path, img, alt) %}
<picture>
	<source
		type="image/webp"
		sizes="(min-width: 1560px) calc(-1.25vw + 358px), (min-width: 760px) calc(21.03vw + 14px), (min-width: 500px) 47.5vw, 97.22vw"
		srcset="
			{{ path }}{{ img }}-1.webp 320w,
			{{ path }}{{ img }}-2.webp 450w,
			{{ path }}{{ img }}-3.webp 640w,
			{{ path }}{{ img }}-4.webp 820w,
			{{ path }}{{ img }}-5.webp 1024w">
	<img 
		sizes="(min-width: 1560px) calc(-1.25vw + 358px), (min-width: 760px) calc(21.03vw + 14px), (min-width: 500px) 47.5vw, 97.22vw"
		srcset="
			{{ path }}{{ img }}-1.jpg 320w,
			{{ path }}{{ img }}-2.jpg 450w,
			{{ path }}{{ img }}-3.jpg 640w,
			{{ path }}{{ img }}-4.jpg 820w,
			{{ path }}{{ img }}-5.jpg 1024w"
		src="{{ path }}{{ img }}-4.jpg" 
		alt="{{ alt }}">
</picture>
{% endmacro %}

{% macro item(post, classes='') %}
	<article class="{{ classes }}{% if post.data.type == "article" %}article {% endif %}item">
		<div class="art-content">
			{% if post.data.tags %}
			{% if post.data.tags != "subnav" %}
			<span class="feat-tag"><a href="#category"><span class="a11y-only">Category: </span>{{ post.data.tags }}</a></span>
			{% endif %}
			{% endif %}
			<h3 class="article-hed"><a href="{{ post.url | url }}">{{ post.data.title }}</a></h3>
			<p class="lede">{{ post.data.subhed }}</p>
			{% if feat %}
			<p>{{ post.data.lede }}</p>
			{% endif %}
		</div>
		{% if post.data.img %}
		<a href="{{ post.url | url }}" aria-hidden="true" tabindex="-1">
			{{ respimg('/img/', post.data.img, post.data.alt, false) }}
		</a>
		{% endif %}
		{% if post.data.feat_img.img %}
			<a href="{{ post.url | url }}" aria-hidden="true" tabindex="-1">
				{% cloudrespimg
					post.data.feat_img.img,
					post.data.feat_img.alt,
					"(min-width: 1560px) calc(-1.25vw + 358px), (min-width: 760px) calc(21.03vw + 14px), (min-width: 500px) 47.5vw, 97.22vw"
				%}
			</a>
		{% endif %}
	</article>
{% endmacro %}


{{ layoutContent | safe }}
{% set postslist = collections.posts %}
<h2 class="section-hed" id="all">All Articles</h2>
<div class="col" aria-labelledby="all">
	<div class="highlights article-highlights">
{% for post in postslist | reverse %}
	{% if post.data.type == 'article' %}
		{{ item(post) }}
	{% endif %}
{% endfor %}
	</div>
</div>